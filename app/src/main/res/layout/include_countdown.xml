<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_action_ok"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/action_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/big_text_size"
            android:textColor="@color/white"
            android:text="@string/action_ok_text"
            />
        <TextView
            android:id="@+id/tv_qingbiyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/big_text_size"
            android:text="@string/qingbiyan"
            android:textColor="@color/red"
            />


    </LinearLayout>

    <com.werewolfgame.werewolfgame.Activity.View.CountDownTextView
        android:id="@+id/ll_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
    </com.werewolfgame.werewolfgame.Activity.View.CountDownTextView>

</LinearLayout>
